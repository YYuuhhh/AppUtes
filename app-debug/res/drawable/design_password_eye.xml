<?xml version="1.0" encoding="utf-8"?>
<animated-selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:id="@id/visible" android:drawable="@drawable/design_ic_visibility_off" />
    <item android:id="@id/masked" android:drawable="@drawable/design_ic_visibility" />
    <transition android:drawable="@drawable/avd_hide_password" android:virtualButtonPressedDrawable="@id/visible" android:frameDuration="@id/masked" />
    <transition android:drawable="@drawable/avd_show_password" android:virtualButtonPressedDrawable="@id/masked" android:frameDuration="@id/visible" />
</animated-selector>